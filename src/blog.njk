---
layout: base.njk
title: Blog
permalink: /blog/
---

<h1>All Blog Posts</h1>

<div class="posts-grid">
{% for post in collections.post | reverse %}
    <div class="post-card">
        <a href="{{ post.url }}">
            <img src="{{ post.data.featuredImage }}" alt="{{ post.data.title }}">
        </a>
        <div class="post-card-content">
            <span class="post-category">{{ post.data.category }}</span>
            <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
            <div class="post-meta">
                <div class="author-small">
                    <img src="{{ post.data.author.image }}" alt="{{ post.data.author.name }}">
                    <span>{{ post.data.author.name }}</span>
                </div>
                <span class="post-date">{{ post.date | date("MMMM DD, YYYY") }}</span>
            </div>
        </div>
    </div>
{% endfor %}
</div>